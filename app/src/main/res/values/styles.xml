<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Estilo para a BottomNavigationView (M3) -->
    <style name="Widget.App.BottomNavigationView.M3" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <!-- Ajustes opcionais aqui se necessÃ¡rio, por exemplo:
        <item name="itemIconTint">@color/bottom_nav_item_color_selector_m3</item>
        <item name="itemTextColor">@color/bottom_nav_item_color_selector_m3</item>
        <item name="itemActiveIndicatorColor">?attr/colorSecondaryContainer</item>
        -->
    </style>

    <!-- Seus estilos de Toolbar -->
    <style name="ToolBarStyle" parent="ToolBarStyle.Base" />
    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.Material3.Light</item>
        <item name="theme">@style/ThemeOverlay.Material3.Dark.ActionBar</item>
    </style>
    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>
    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!-- Estilos da TabLayout -->
    <style name="CustomTabLayoutStyle" parent="Widget.Material3.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabTexStyle</item>
    </style>
    <style name="CustomTabTexStyle" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/tab_text_color_selector_m3</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>